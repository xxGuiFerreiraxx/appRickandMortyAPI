<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/txttitmain"
        android:layout_width="330dp"
        android:layout_height="75dp"
        android:layout_marginTop="100dp"
        android:contentDescription="@string/pergunta_main"
        android:fontFamily="@font/creepster"
        android:shadowColor="@color/white"
        android:text="@string/pergunta_main"
        android:textAlignment="center"
        android:textColor="@color/verde1"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgbalaomain"
        android:layout_width="406dp"
        android:layout_height="137dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="100dp"
        android:contentDescription="@string/fala_main"
        app:layout_constraintBottom_toBottomOf="@+id/imgrickmain"
        app:layout_constraintStart_toStartOf="@+id/imgrickmain"
        app:srcCompat="@drawable/fala" />

    <ImageView
        android:id="@+id/imgrickmain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="194dp"
        android:contentDescription="@string/desc_imgrick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/rick" />

    <TextView
        android:id="@+id/txtfalabalao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/fala_main"
        android:fontFamily="@font/creepster"
        android:text="@string/fala_main"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgbalaomain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.654"
        app:layout_constraintStart_toStartOf="@+id/imgbalaomain"
        app:layout_constraintTop_toTopOf="@+id/imgbalaomain"
        app:layout_constraintVertical_bias="0.407" />

    <ImageView
        android:id="@+id/imgportalmain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/desc_imgportal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/portal" />

    <Button
        android:id="@+id/btn_portal"
        android:layout_width="168dp"
        android:layout_height="122dp"
        android:layout_marginTop="304dp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/imgportalmain"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>